<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="70dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="3"
            app:cardBackgroundColor="@color/fire"
            app:cardCornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/plus_two"
                    style="@android:style/Widget.Material.Light.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:rotation="-180"
                    app:icon="@drawable/ic_outline_arrow_circle_up_24"
                    app:iconGravity="textTop"
                    app:iconTint="@color/white" />

                <TextView
                    android:id="@+id/counter_two"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:freezesText="true"
                    android:gravity="center"
                    android:rotation="-180"
                    android:text="20"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#B54E4E"
                    android:textSize="150sp"
                    android:textStyle="normal|bold"
                    tools:text="20" />

                <Button
                    android:id="@+id/minus_two"
                    style="@android:style/Widget.Material.Light.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:rotation="-180"
                    app:icon="@drawable/ic_baseline_arrow_circle_down_24"
                    app:iconGravity="textTop"
                    app:iconTint="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/back_reset_one"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:rotation="-180"
                app:icon="@drawable/ic_baseline_broken_image_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="#DD1010"
                app:iconTintMode="src_atop" />

            <Button
                android:id="@+id/reset_couters"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                app:icon="@drawable/ic_round_autorenew_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="#11770F"
                app:iconTintMode="src_atop" />

            <Button
                android:id="@+id/back_reset_two"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                app:icon="@drawable/ic_baseline_broken_image_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="#3529C8"
                app:iconTintMode="src_atop" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="3"
            app:cardBackgroundColor="@color/water"
            app:cardCornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minus_one"
                    style="@android:style/Widget.Material.Light.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_baseline_arrow_circle_down_24"
                    app:iconGravity="textTop"
                    app:iconTint="@color/white" />

                <TextView
                    android:id="@+id/counter_one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:freezesText="true"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="#FFFFFF"
                    android:textSize="150sp"
                    android:textStyle="normal|bold"
                    tools:text="20" />

                <Button
                    android:id="@+id/plus_one"
                    style="@android:style/Widget.Material.Light.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_outline_arrow_circle_up_24"
                    app:iconGravity="textTop"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>